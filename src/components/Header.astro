---
import siteConfig from '../data/site-config';

const titleClass =
  'text-theme-foreground font-serif text-2xl leading-tight font-medium sm:text-3xl';
---

<header class="mx-auto mb-12 flex w-full max-w-3xl items-center gap-4 sm:mb-16">
  {
    siteConfig.avatar?.src && (
      <a href="/">
        <img
          src={siteConfig.avatar.src}        // â† /images/Avatar.jpeg
          alt={siteConfig.avatar.alt ?? ''}
          class="aspect-square w-16 rounded-full object-cover sm:w-20"
          loading="eager"
          fetchpriority="high"
          width="80"
          height="80"
        />
      </a>
    )
  }
  <div class="grow">
    {
      siteConfig.avatar?.src ? (
        <p class={titleClass}>{siteConfig.title}</p>
      ) : (
        <a class={titleClass} href="/">{siteConfig.title}</a>
      )
    }
    {siteConfig.subtitle && <p class="text-sm leading-tight">{siteConfig.subtitle}</p>}
  </div>
</header>